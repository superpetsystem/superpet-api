{
	"info": {
		"_postman_id": "features-collection-001",
		"name": "SuperPet - Advanced Features",
		"description": "Advanced features: TelePickup and Live Camera streaming.\n\n**TelePickup:**\n- Schedule pet pickups with time windows\n- Track pickup status (PENDING, CONFIRMED, COMPLETED, CANCELLED)\n\n**Live Camera:**\n- Create live streams for pets\n- Customer access to watch their pets\n- Auto-expiring streams",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "TelePickup",
			"item": [
				{
					"name": "1. Schedule Pickup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"petId\": \"{{pet_id}}\",\n  \"customerId\": \"{{customer_id}}\",\n  \"requestedDate\": \"2025-10-20\",\n  \"windowStart\": \"14:00:00\",\n  \"windowEnd\": \"16:00:00\",\n  \"notes\": \"Pet está no banho, pode buscar após 14h\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/pickups",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "pickups"]
						}
					}
				},
				{
					"name": "2. List Pickups (Today)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/pickups?date=2025-10-20",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "pickups"],
							"query": [
								{
									"key": "date",
									"value": "2025-10-20"
								}
							]
						}
					}
				},
				{
					"name": "3. Confirm Pickup",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"CONFIRMED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/pickups/{{pickup_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "pickups", "{{pickup_id}}", "status"]
						}
					}
				},
				{
					"name": "4. Complete Pickup",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"COMPLETED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/pickups/{{pickup_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "pickups", "{{pickup_id}}", "status"]
						}
					}
				},
				{
					"name": "5. Cancel Pickup",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"CANCELLED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/pickups/{{pickup_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "pickups", "{{pickup_id}}", "status"]
						}
					}
				}
			]
		},
		{
			"name": "Live Camera",
			"item": [
				{
					"name": "1. Create Live Stream",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"petId\": \"{{pet_id}}\",\n  \"streamUrl\": \"https://stream.example.com/live/abc123\",\n  \"playerUrl\": \"https://player.example.com/live/abc123\",\n  \"expiresAt\": \"2025-10-20T23:59:59Z\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/live-cam/streams",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "live-cam", "streams"]
						}
					}
				},
				{
					"name": "2. Get Pet Streams (Customer View)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/customers/{{customer_id}}/pets/{{pet_id}}/live-cam",
							"host": ["{{base_url}}"],
							"path": ["v1", "customers", "{{customer_id}}", "pets", "{{pet_id}}", "live-cam"]
						},
						"description": "Customer can view live streams of their pet"
					}
				},
				{
					"name": "3. Delete Stream",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "{{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/stores/{{store_id}}/live-cam/streams/{{stream_id}}",
							"host": ["{{base_url}}"],
							"path": ["v1", "stores", "{{store_id}}", "live-cam", "streams", "{{stream_id}}"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "Bearer YOUR_TOKEN_HERE",
			"type": "string"
		},
		{
			"key": "store_id",
			"value": "00000000-0000-0000-0000-000000000101",
			"type": "string"
		},
		{
			"key": "customer_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "pet_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "pickup_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "stream_id",
			"value": "",
			"type": "string"
		}
	]
}

