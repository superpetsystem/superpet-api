			]
		},
		{
			"name": "8. Reset Password",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"newPassword\": \"novaSenha789\"\n}",
